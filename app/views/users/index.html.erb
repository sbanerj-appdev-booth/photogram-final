<h1>List of users</h1>

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.username %>
    </td>
   <td>
      <%= if user.private == true then "Yes" else "No" end %>
    </td>

    <td>
      <form action="/insert_follow_request" method="post">
        <input type="hidden" name="query_recipient_id" value="128">

              <button>
                Follow
              </button>
            </form>
    </td>

    <td>
      <a href="/users/<%= user.username %>">Show details</a>
    </td>
  </tr>
  
  <% end %>
</table>
